<Window x:Class="WPF_TESTAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:WPF_TESTAPP.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <l:TruckViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <Label Margin="50" Content="{Binding Hersteller}" Width="200" Height="25"/>
            <Button x:Name="button" Content="Ändere Hersteller" Width="200" Height="30" Click="button_Click"/>
        </StackPanel>


    </Grid>
</Window>
